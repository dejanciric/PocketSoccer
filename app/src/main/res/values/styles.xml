<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextStyle1">
        <item name="android:fontFamily">@font/bangers</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:padding">3dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextStyle2">
        <item name="android:fontFamily">@font/bangers</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:padding">3dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="MySeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">#a7c507</item>
        <item name="android:progressTint">#a7c507</item>
        <item name="android:thumbTint">#388e3c</item>
        <item name="android:colorControlActivated">#388e3c</item>
    </style>

    <style name="TextStyle3">
        <item name="android:scaleX">1.5</item>
        <item name="android:fontFamily">@font/bangers</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextStyle4">
        <item name="android:scaleX">1.5</item>
        <item name="android:fontFamily">@font/bangers</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/gold</item>
    </style>

    <style name="TextStyle5">

        <item name="android:textSize">15sp</item>

        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="TextStyle6">
        <item name="android:scaleX">1.5</item>
        <item name="android:fontFamily">@font/bangers</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
